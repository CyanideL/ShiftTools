<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/mobi.cyann.shifttools" android:key="root" >

    <mobi.cyann.shifttools.preference.RemovablePreferenceCategory android:title="@string/label_audio_tweak" >

    <mobi.cyann.shifttools.preference.StatusPreference
            custom:interfacePath="/sys/devices/virtual/misc/boeffla_sound/boeffla_sound"
            android:key="@string/key_boeffla_sound_enable"
	    custom:description="Completely enable/disable boeffla sound"
            android:summary="@string/status_not_available"
            android:title="@string/label_boeffla_sound_enable" />

    <mobi.cyann.shifttools.preference.StatusPreference
            custom:interfacePath="/sys/devices/virtual/misc/boeffla_sound/speaker_tuning"
            android:key="@string/key_boeffla_sound_speaker_tuning"
	    custom:description="Enable speaker tuning for better bass."
            android:summary="@string/status_not_available"
            android:title="@string/label_speaker_tuning" />

        <mobi.cyann.shifttools.preference.IntegerPreference
            custom:interfacePath="/sys/devices/virtual/misc/boeffla_sound/speaker_expansion"
            android:key="@string/key_boeffla_sound_speaker_expansion"
	    custom:description="Speaker Amplification Offset. 0 means stock value. Having too much amplification may cause distortion."
            custom:maxValue="6"
            custom:metrics=""
            custom:minValue="-6"
            custom:step="1"
	    android:summary="0"
            android:title="@string/key_boeffla_sound_stereo_expansion" />

        <mobi.cyann.shifttools.preference.IntegerPreference
            custom:interfacePath="/sys/devices/virtual/misc/boeffla_sound/headphone_volume"
            android:key="@string/key_boeffla_sound_headphone_volume"
	    custom:description="Headphone Amplifier Level (0-63 which corresponds to -57db-6db)."
            custom:maxValue="63"
            custom:metrics=""
            custom:minValue="0"
            custom:step="1"
            android:summary="0"
            android:title="@string/label_headphone_volume" />
            
        <mobi.cyann.shifttools.preference.IntegerPreference
            custom:interfacePath="/sys/devices/virtual/misc/boeffla_sound/speaker_volume"
            android:key="@string/key_boeffla_sound_headphone_volume"
	    custom:description="Headphone Amplifier Level (0-63 which corresponds to -57db-6db)."
            custom:maxValue="63"
            custom:metrics=""
            custom:minValue="0"
            custom:step="1"
            android:summary="0"
            android:title="@string/label_headphone_volume" />

    <mobi.cyann.shifttools.preference.StatusPreference
            custom:interfacePath="/sys/devices/virtual/misc/boeffla_sound/stereo_expansion"
            android:key="@string/key_boeffla_sound_stereo_expansion"
            android:summary="@string/status_not_available"
            android:title="@string/label_stereo_expansion" />

    <mobi.cyann.shifttools.preference.StatusPreference
            custom:interfacePath="/sys/devices/virtual/misc/boeffla_sound/fll_tuning"
            android:key="@string/key_boeffla_sound_fll_tuning"
            android:summary="@string/status_not_available"
            android:title="@string/label_fll_tuning" />

    <mobi.cyann.shifttools.preference.StatusPreference
            custom:interfacePath="/sys/devices/virtual/misc/boeffla_sound/dac_oversampling"
            android:key="@string/key_boeffla_sound_speaker_tuning"
            android:summary="@string/status_not_available"
            android:title="@string/label_dac_oversampling" />
    
    <mobi.cyann.shifttools.preference.StatusPreference
            custom:interfacePath="/sys/devices/virtual/misc/boeffla_sound/dac_direct"
            android:key="@string/key_boeffla_sound_dac_direct"
            android:summary="@string/status_not_available"
            android:title="@string/label_dac_direct" />

    <mobi.cyann.shifttools.preference.StatusPreference
            custom:interfacePath="/sys/devices/virtual/misc/boeffla_sound/mono_downmix"
            android:key="@string/key_boeffla_sound_mono_downmix"
            android:summary="@string/status_not_available"
            android:title="@string/label_mono_downmix" />
    </mobi.cyann.shifttools.preference.RemovablePreferenceCategory>



<mobi.cyann.shifttools.preference.RemovablePreferenceCategory android:title="@string/label_audio_tweak" >

